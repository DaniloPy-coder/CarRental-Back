{
    "version": 2,
    "builds": [
        {
            "src": "backend/dist/server.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "backend/dist/**",
                    "frontend/dist/**",
                    "prisma/**",
                    "node_modules/prisma/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "backend/dist/server.js"
        }
    ]
}